<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/labelname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelname"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:text="NAME :-"
        android:textColor="#101010"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/labelname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelname3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:text="Email ID  :-"
        android:textColor="#101010"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/pbg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#685F5F"
        app:srcCompat="@drawable/profile_bg" />

    <ImageView
        android:id="@+id/pro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/labelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/aclonica"
        android:text="USN  :-"
        android:textColor="#101010"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/usndisp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="162dp"
        android:layout_toRightOf="@id/labelname"
        android:fontFamily="@font/aclonica"
        android:textColor="#101010"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/namedisp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usndisp1"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="72dp"
        android:layout_toRightOf="@id/labelname3"
        android:fontFamily="@font/aclonica"
        android:textColor="#101010"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emaildisp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namedisp1"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="63dp"
        android:layout_toRightOf="@id/labelname2"
        android:fontFamily="@font/aclonica"
        android:textColor="#101010"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/aclonica"
        android:text="WELCOME TO BMSCE REVALS"
        android:textColor="#1085E3"
        android:textSize="25sp" />
</RelativeLayout>